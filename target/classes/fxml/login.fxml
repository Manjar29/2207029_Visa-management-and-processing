<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.visa.management.controllers.LoginController"
            styleClass="root">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="navbar">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
            <Button text="â† Back" onAction="#handleBackToHome" styleClass="btn-back"/>
            <Label text="ðŸŒ Visa Portal" styleClass="logo">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="60" right="40" bottom="60" left="40"/>
            </padding>

            <!-- Form Container -->
            <VBox alignment="CENTER" spacing="25" styleClass="form-container" maxWidth="450" prefWidth="450">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <!-- Header -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Login to Your Account" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="28"/>
                        </font>
                    </Label>
                    <Label text="Access your visa applications and track their status" styleClass="section-subtitle">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Label>
                </VBox>

                <!-- Email Field -->
                <VBox spacing="8">
                    <Label text="Email Address" styleClass="field-label">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Label>
                    <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field" prefHeight="40"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" styleClass="field-label">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field" prefHeight="40"/>
                </VBox>

                <!-- Remember Me & Forgot Password -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <CheckBox fx:id="rememberMeCheckBox" text="Remember me" styleClass="checkbox"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword" styleClass="link"/>
                </HBox>

                <!-- Login Button -->
                <Button text="Login" onAction="#handleLogin" styleClass="btn-primary" prefWidth="370" prefHeight="45">
                    <font>
                        <Font name="System Bold" size="15"/>
                    </font>
                </Button>

                <!-- Sign Up Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" styleClass="text-muted">
                        <font>
                            <Font size="13"/>
                        </font>
                    </Label>
                    <Hyperlink text="Sign Up" onAction="#handleSignUp" styleClass="link">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Hyperlink>
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
