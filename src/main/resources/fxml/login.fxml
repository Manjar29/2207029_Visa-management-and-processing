<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.visa.management.controllers.LoginController"
            styleClass="root">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="navbar">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
            <Button text="â† Back" onAction="#handleBack" styleClass="btn-back"/>
            <Label text="ðŸŒ Visa Portal" styleClass="logo">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="60" right="40" bottom="60" left="40"/>
            </padding>

            <!-- Form Container -->
            <VBox alignment="CENTER" spacing="25" styleClass="form-container" maxWidth="450" prefWidth="450">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <!-- Header -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Login to Your Account" styleClass="section-title">
                        <font>
                            <Font name="System Bold" size="28"/>
                        </font>
                    </Label>
                    <Label text="Access your visa applications and track their status" styleClass="section-subtitle">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Label>
                </VBox>

                <!-- Login Type Selection -->
                <VBox alignment="CENTER" spacing="15">
                    <Label text="Select Login Type" styleClass="section-subtitle">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Label>
                    
                    <HBox alignment="CENTER" spacing="30">
                        <RadioButton fx:id="adminRadio" text="Admin" toggleGroup="$loginTypeGroup" styleClass="radio-button">
                            <font>
                                <Font size="14"/>
                            </font>
                        </RadioButton>
                        <RadioButton fx:id="applicantRadio" text="Applicant" toggleGroup="$loginTypeGroup" selected="true" styleClass="radio-button">
                            <font>
                                <Font size="14"/>
                            </font>
                        </RadioButton>
                    </HBox>
                </VBox>

                <!-- Username/Application ID Field -->
                <VBox spacing="8">
                    <Label fx:id="usernameLabel" text="Application ID" styleClass="field-label">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" promptText="Enter your application ID" styleClass="text-field" prefHeight="40"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" styleClass="field-label">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field" prefHeight="40"/>
                </VBox>

                <!-- Login Button -->
                <Button text="Login" onAction="#handleLogin" styleClass="btn-primary" prefWidth="370" prefHeight="45">
                    <font>
                        <Font name="System Bold" size="15"/>
                    </font>
                </Button>

                <!-- Info Message -->
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #e3f2fd; -fx-border-color: #2196F3; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                    <Label text="â„¹ Admin Credentials Info" styleClass="text-muted">
                        <font>
                            <Font name="System Bold" size="11"/>
                        </font>
                    </Label>
                    <Label text="Username: admin_[country] (e.g., admin_india)" styleClass="text-muted">
                        <font>
                            <Font size="10"/>
                        </font>
                    </Label>
                    <Label text="Password: [country]123 (e.g., india123)" styleClass="text-muted">
                        <font>
                            <Font size="10"/>
                        </font>
                    </Label>
                </VBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
